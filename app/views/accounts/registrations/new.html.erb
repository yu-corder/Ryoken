<div class = "login-container-box">
    <div class = "login-container">
        <div class = "login-form-box">
          <h2>新規登録</h2>
          <p class = "mail-text">※メールが届くまで時間がかかることがあります。</p>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'login-form'}) do |f| %>
              <%= render "accounts/shared/error_messages", resource: resource %>

              <div class="field">
                  <%= f.label :メールアドレス %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-field' %>
              </div>

              <div class="field">
                  <%= f.label :パスワード %>
                  <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> 文字以上)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password", class: 'text-field' %>
              </div>

              <div class="field">
                  <%= f.label :パスワード（確認用） %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'text-field' %>
              </div>

              <div class="actions">
                  <%= f.submit "登録", class: 'actions-btn-2' %>
              </div>
          <% end %>
          <div class = "sign-up-link">
              <%= render "accounts/shared/links" %>
          </div>
        </div>
    </div>
</div>